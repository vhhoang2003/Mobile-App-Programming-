<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header (Tiêu đề) -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="@string/quadratic_equation"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#FF6200EE"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <!-- Ô nhập hệ số A -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutA"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="24dp"
        android:hint="Input A"
        app:boxStrokeColor="#6200EE"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:endIconMode="clear_text"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextNumberA"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:textSize="16sp"
            android:gravity="center"
            android:inputType="number"
            android:background="@android:color/transparent"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Ô nhập hệ số B -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutB"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="24dp"
        android:hint="Input B"
        app:boxStrokeColor="#6200EE"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:endIconMode="clear_text"
        app:layout_constraintTop_toBottomOf="@id/textInputLayoutA"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextNumberB"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:textSize="16sp"
            android:gravity="center"
            android:inputType="number"
            android:background="@android:color/transparent"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Ô nhập hệ số C -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutC"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="24dp"
        android:hint="Input C"
        app:boxStrokeColor="#6200EE"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:endIconMode="clear_text"
        app:layout_constraintTop_toBottomOf="@id/textInputLayoutB"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextNumberC"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:textSize="16sp"
            android:gravity="center"
            android:inputType="number"
            android:background="@android:color/transparent"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Nút Giải Phương Trình -->
    <Button
        android:id="@+id/btnSolve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="10dp"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textInputLayoutC"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>

